<launch>

  <!-- <arg name="model" default="$(find rls_robot_description)/robot/arm_module.xacro"/> -->
  <!-- <arg name="model" default="$(find rls_robot_description)/robot/mobile_base.xacro"/> -->
  <arg name="model" default="$(find rls_robot_description)/robot/modular_home_robot.xacro"/>
  <arg name="gui" default="True"/>
  <arg name="rvizconfig" default="$(find rls_robot_description)/rviz/display.rviz"/>

  <param name="robot_description" command="$(find xacro)/xacro '--inorder' '$(arg model)'"/>
  <param name="use_gui" value="$(arg gui)"/>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>

</launch>
